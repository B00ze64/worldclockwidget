<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ch.corten.aha.worldclock"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="7" android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <receiver android:name=".WorldClockAppWidgetProvider">
			<intent-filter>
				<action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
			</intent-filter>
			<intent-filter>
			    <action android:name="android.appwidget.action.APPWIDGET_DISABLED" />
			</intent-filter>
			<intent-filter>
			    <action android:name="android.appwidget.action.APPWIDGET_ENABLED" />
			</intent-filter>
			<intent-filter>
			    <action android:name="ch.corten.aha.worldclockwidget.CLOCK_WIDGET_UPDATE" />
			</intent-filter>
			<meta-data android:name="android.appwidget.provider"
               android:resource="@xml/world_clock_appwidget_info" />
        </receiver>
        <provider
            android:name="ch.corten.aha.worldclock.provider.WorldClockContentProvider"
            android:authorities="ch.corten.aha.worldclock.provider"
            android:exported="false" />
    </application>

</manifest>